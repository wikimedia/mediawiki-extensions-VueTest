{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/mediawiki"
	],
	"globals": {
		"mw": false,
		"OO": false,
		"require": "readonly",
		"module": false
	},
	"rules": {
		"vue/html-indent": [ "warn", "tab" ],
		"vue/max-attributes-per-line": [ "warn", {
			"singleline": 2,
			"multiline": {
				"max": 1,
				"allowFirstLine": true
			} 
		} ]
	}
}
